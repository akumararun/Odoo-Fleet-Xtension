<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
        <menuitem name="Suppliers" parent="fleet.menu_root" id="fleet.fleet_supplier" sequence="5" groups="fleet.group_fleet_user"/>
       <menuitem action="base.action_partner_supplier_form" id="fleet_supplier" parent="fleet.fleet_supplier" sequence="1"/>
       
       <record model="ir.ui.view" id="partner_view_button_item_count">
            <field name="name">partner.view.button.item_count</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority" eval="21"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button type="action" class="oe_stat_button" name="%(fleet.fleet_vehicle_log_fuel_act)d" 
                    context="{'search_default_vendor_id': active_id,'default_vendor_id': active_id}" icon="fa-usd">
                        <field string="Fuel" name="fuel_count" widget="statinfo"/>                        
                    </button>
                    <button type="action" class="oe_stat_button" name="%(fleet.fleet_vehicle_log_services_act)d" 
                    context="{'search_default_vendor_id': active_id,'default_vendor_id': active_id}" icon="fa-wrench">
                        <field string="Services" name="service_count" widget="statinfo"/>                        
                    </button>                    
                    <button type="action" class="oe_stat_button" name="%(fleet.fleet_vehicle_log_contract_act)d" 
                    context="{'search_default_insurer_id': active_id,'default_insurer_id': active_id}" icon="fa-book">
                        <field string="Contracts" name="contract_count" widget="statinfo"/>                        
                    </button>
                </xpath>
            </field>
        </record>
        
    
    <record id="fleet_vehicle_log_fuel_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.fuel.tree.inherit</field>
        <field name="model">fleet.vehicle.log.fuel</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_fuel_tree" />
        <field name="arch" type="xml">
            <field name="purchaser_id" position='replace'>
                <field name="purchaser_id" invisible="1" />
            </field> 
            <field name="vendor_id" position='replace'>
                <field name="vendor_id" />
            </field>       
            
        </field>
    </record>
        
        

	</data>
</openerp>

